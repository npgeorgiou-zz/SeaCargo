block content
    h3(style='font-size: 20px; font-weight: bold; color:white;')= tableTitle
    table.table.table-striped.table-hover
        thead
            tr
                th ID
                th Last Name
                th First Name
                th Title
                th Title of Courtesy
                th Birth Date
                th Hire Date
                th Address
                th City
                th Region
                th ZIP
                th Country
                th Home Phone
                th Extension
                th Spy Info
                th Edit
                th Delete
        tbody
        - each e in list
            tr
                td
                    a.useajax(href = 'orders/employee/'+e._id data-toggle='tooltip' data-placement='top' title="Employee's Orders")  #{e._id}
                td
                    a.useajax(href = 'employees/'+e._id data-toggle='tooltip' data-placement='top' title="Employee's Info")  #{e.lastName}
                td= e.firstName
                td= e.title
                td= e.titleOfCourtesy
                td= e.birthDate
                td= e.hireDate
                td= e.address
                td= e.city
                td= e.region
                td= e.postalCode
                td= e.country
                td= e.homePhone
                td= e.extension
                td= e.notes
                td
                    button.btn.btn-blue.disabled(name='employees/'+e._id)
                        span.glyphicon.glyphicon-pencil
                td
                    button.btn.btn-red(name='employees/'+e._id)
                        span.glyphicon.glyphicon-trash